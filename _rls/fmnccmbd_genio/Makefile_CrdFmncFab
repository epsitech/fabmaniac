# file Makefile
# make file for CrdFmncFab card job handler, release fmnccmbd_genio
# author Alexander Wirthmueller
# date created: 7 Mar 2016
# modified: 7 Mar 2016

SRCROOT = /home/epsi/src
LIBROOT = /home/epsi/lib

CC = g++
CPPFLAGS = -std=c++11 -g -Wall -Os -pthread -DFMNCCMBD

INCS = -I/usr/include/libxml2 -I/usr/include/mysql -I/usr/include/postgresql -I/usr/local/include -I/usr/include
INCS += -I$(SRCROOT)
INCS += -I$(SRCROOT)/dbsfmnc
INCS += -I$(SRCROOT)/fmnccmbd -I$(SRCROOT)/fmnccmbd/IexFmnc -I$(SRCROOT)/fmnccmbd/VecFmnc

OBJECTS += CrdFmncFab.o DlgFmncFabExpfab.o DlgFmncFabImpfab.o DlgFmncFabNew.o PnlFmncFabRec.o PnlFmncFabDetail.o PnlFmncFab1NFabproject.o QryFmncFab1NFabproject.o PnlFmncFab1NFabuser.o QryFmncFab1NFabuser.o PnlFmncFabFab1NTool.o QryFmncFabFab1NTool.o PnlFmncFabMNRun.o QryFmncFabMNRun.o PnlFmncFabHeadbar.o PnlFmncFabList.o QryFmncFabList.o

LIBRARY = libcrdfmncfab

.SUFFIXES: .cpp

.cpp.o :
	$(CC) $(CPPFLAGS) $(INCS) -o $@ -c $<

all:	$(LIBRARY)

$(LIBRARY):	$(OBJECTS)
	ar rcs $(LIBRARY).a $(OBJECTS)
	rm -f *.o

install:
	cp $(LIBRARY).a $(LIBROOT)/fmnccmbd/

clean:
	rm -f *.o

