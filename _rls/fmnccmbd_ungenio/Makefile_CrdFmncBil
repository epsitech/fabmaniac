# file Makefile
# make file for CrdFmncBil card job handler, release fmnccmbd_ungenio
# author Alexander Wirthmueller
# date created: 7 Mar 2016
# modified: 7 Mar 2016

SRCROOT = /Users/epsi/src
LIBROOT = /Users/epsi/lib

CC = g++
CPPFLAGS = -std=c++11 -g -Wall -Os -pthread -DFMNCCMBD

INCS = -I/opt/local/include/libxml2 -I/usr/local/mysql/include -I/opt/local/include/postgresql84 -I/opt/local/include -I/usr/include
INCS += -I$(SRCROOT)
INCS += -I$(SRCROOT)/dbsfmnc
INCS += -I$(SRCROOT)/fmnccmbd -I$(SRCROOT)/fmnccmbd/IexFmnc -I$(SRCROOT)/fmnccmbd/VecFmnc

OBJECTS += CrdFmncBil.o PnlFmncBilRec.o PnlFmncBilDetail.o PnlFmncBilAPos.o QryFmncBilAPos.o PnlFmncBilHeadbar.o PnlFmncBilList.o QryFmncBilList.o

LIBRARY = libcrdfmncbil

.SUFFIXES: .cpp

.cpp.o :
	$(CC) $(CPPFLAGS) $(INCS) -o $@ -c $<

all:	$(LIBRARY)

$(LIBRARY):	$(OBJECTS)
	ar rcs $(LIBRARY).a $(OBJECTS)
	rm -f *.o

install:
	cp $(LIBRARY).a $(LIBROOT)/fmnccmbd/

clean:
	rm -f *.o

